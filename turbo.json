{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^db-generate", "^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^db-generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "@open-zero/database#db-migrate": {
      "cache": false
    },
    "db-generate": {
      "cache": false
    },
    "db-deploy": {
      "cache": false
    },
    "db-seed": {}
  },
  "ui": "tui"
}
