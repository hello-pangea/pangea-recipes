{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^db-generate", "^build"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "lint": {
      "dependsOn": ["^build", "transit"]
    },
    "dev": {
      "dependsOn": ["^db-generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "@open-zero/database#db-migrate": {
      "cache": false
    },
    "db-generate": {
      "cache": false
    },
    "db-deploy": {
      "cache": false
    },
    "db-seed": {}
  }
}
