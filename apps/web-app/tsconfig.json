{
  "extends": "@open-zero/typescript-config/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "#src/*": ["src/*"],

      // This helps VSCode figure out "Go to definition"
      "@open-zero/*": ["../../packages/*/src"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.vite.json" }]
}
