{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "imports": {
    "#src/*.js": "./dist/*.js"
  },
  "exports": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup --watch './src/**' --watch '../../packages/features/dist/index.js' --watch '../../packages/recipe-importer/dist/index.js' --onSuccess \"node --env-file=.env dist/index.js\"",
    "lint": "concurrently pnpm:lint:*",
    "lint:eslint": "eslint src/",
    "lint:type-check": "tsc --project tsconfig.build.json --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.699.0",
    "@fastify/auth": "^5.0.1",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/type-provider-typebox": "^5.0.1",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@open-zero/database": "workspace:*",
    "@open-zero/features": "workspace:*",
    "@open-zero/recipe-importer": "workspace:*",
    "@scalar/fastify-api-reference": "^1.25.70",
    "@sinclair/typebox": "^0.33.22",
    "chalk": "^5.3.0",
    "date-fns": "^3.6.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "lucia": "^3.2.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@open-zero/eslint-config-node": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^22.9.3",
    "concurrently": "^8.2.2",
    "pino-pretty": "^11.3.0",
    "tsup": "^8.3.5",
    "typescript": "5.6.3"
  }
}
