{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch './src/**' --watch '../../packages/features/dist/index.js' --watch '../../packages/recipe-importer/dist/index.js' --onSuccess \"node --env-file=.env dist/index.js\"",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "concurrently pnpm:lint:*",
    "lint:type-check": "tsc --project tsconfig.build.json --noEmit",
    "lint:eslint": "eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@open-zero/database": "workspace:*",
    "@open-zero/features": "workspace:*",
    "@open-zero/recipe-importer": "workspace:*",
    "@scalar/fastify-api-reference": "^1.23.5",
    "@sinclair/typebox": "^0.32.31",
    "chalk": "^5.3.0",
    "fastify": "^4.27.0",
    "lucia": "^3.2.0"
  },
  "devDependencies": {
    "@open-zero/eslint-config-node": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^20.14.2",
    "concurrently": "^8.2.2",
    "pino-pretty": "^11.1.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "imports": {
    "#src/*.js": "./dist/*.js"
  }
}
