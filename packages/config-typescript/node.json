{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,

    "verbatimModuleSyntax": true,

    "exactOptionalPropertyTypes": false,

    "preserveWatchOutput": true,

    "noEmit": true
  },
  "exclude": ["node_modules", "dist"],
  "extends": ["./bases/node20.json", "./bases/strictest.json"]
}
