{
  "name": "@open-zero/database",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"tsc --emitDeclarationOnly\"",
    "build": "tsup --onSuccess \"tsc --emitDeclarationOnly\"",
    "db-generate": "prisma generate && prisma format",
    "db-migrate": "prisma migrate dev",
    "db-deploy": "prisma migrate deploy",
    "db-seed": "tsx src/seed.ts",
    "db-studio": "prisma studio",
    "lint": "tsc --noEmit && eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0"
  },
  "devDependencies": {
    "@open-zero/eslint-config-node": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^20.12.7",
    "prisma": "^5.13.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5"
  }
}
