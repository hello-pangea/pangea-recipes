{
  "name": "@open-zero/database",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "db-generate": "prisma generate && prisma format",
    "db-studio": "prisma studio",
    "db-up": "docker compose up -d postgres postgres_is_ready",
    "db-seed": "tsx --env-file=.env src/seed.ts",
    "db-setup": "run-s db-up db-deploy db-seed",
    "db-nuke": "docker compose down --volumes --remove-orphans",
    "db-migrate": "prisma migrate dev",
    "db-deploy": "prisma migrate deploy",
    "dx": "pnpm db-setup",
    "dev": "tsc --watch",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1"
  },
  "devDependencies": {
    "@open-zero/eslint-config-node": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^22.10.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2"
  }
}
