    "dev": "tsc --project tsconfig.build.json --watch",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1"
  },
  "devDependencies": {
    "@open-zero/eslint-config-node": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^20.16.3",
