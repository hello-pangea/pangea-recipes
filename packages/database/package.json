{
  "name": "@open-zero/database",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "pnpm db:generate",
    "build": "tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf prisma/generated",
    "db:generate": "prisma generate --no-hints && prisma format",
    "db:studio": "prisma studio",
    "db:up": "docker compose up -d postgres postgres_is_ready",
    "db:seed": "tsx --env-file=.env src/seed.ts",
    "db:setup": "run-s db:up db:deploy db:seed",
    "db:nuke": "docker compose down --volumes --remove-orphans",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "dx": "pnpm db:setup",
    "dev": "tsc --watch",
    "lint:eslint": "eslint src/",
    "lint:type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2"
  },
  "devDependencies": {
    "@open-zero/eslint-config": "workspace:*",
    "@open-zero/typescript-config": "workspace:*",
    "@types/node": "^22.15.21",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.8.2",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3"
  }
}
