datasource db {
  provider = "postgresql"
}

generator client {
  provider               = "prisma-client"
  output                 = "../src/generated-prisma-client"
  previewFeatures        = ["relationJoins"]
  runtime                = "nodejs"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "js"
}
