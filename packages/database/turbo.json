{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "db-migrate": {
      "cache": false,
      "dependsOn": ["db-up"],
      "inputs": ["./prisma/schema/**/*.prisma", "./prisma/migrations/**/*.sql"]
    },
    "db-seed": {
      "cache": false,
      "dependsOn": ["db-migrate"]
    },
    "db-up": {
      "cache": false
    },
    "dx": {
      "cache": false,
      "dependsOn": ["db-migrate"]
    }
  }
}
