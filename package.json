{
  "name": "@open-zero/recipes",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "db:deploy": "turbo run db:deploy",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:nuke": "turbo run db:nuke",
    "db:studio": "pnpm run -F=database db:studio",
    "dev": "turbo run dev",
    "dx": "turbo run dx",
    "format": "pnpm format:prettier && pnpm format:package-json",
    "format:package-json": "sort-package-json \"package.json\" \"apps/*/package.json\" \"packages/*/package.json\"",
    "format:prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "sort-package-json": "^2.14.0",
    "tsx": "^4.19.2",
    "turbo": "^2.4.1"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=22.11.0"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema",
    "seed": "tsx packages/database/src/seed.ts"
  }
}
